<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="headspace.Views.DocumentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:headspace.Converters"
    xmlns:vCommon="using:headspace.Views.Common"
    xmlns:vm="using:headspace.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <conv:NullToBooleanConverter x:Key="NullToBooleanConverter" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Document List -->
        <vCommon:ItemListView Grid.Column="0" DataContext="{x:Bind ViewModel}" />

        <!-- Main Window -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!-- Tool bar -->
            <CommandBar Grid.Row="0" DefaultLabelPosition="Right" Background="Transparent">
                <AppBarElementContainer>
                    <ComboBox x:Name="FontComboBox" Width="150" SelectionChanged="FontComboBox_SelectionChanged">
                        <ComboBoxItem>Arial</ComboBoxItem>
                        <ComboBoxItem>Calibri</ComboBoxItem>
                        <ComboBoxItem>Times New Roman</ComboBoxItem>
                        <ComboBoxItem>Consolas</ComboBoxItem>
                    </ComboBox>
                </AppBarElementContainer>
                <AppBarSeparator />
                <AppBarToggleButton x:Name="BoldButton"
                                    Icon="Bold"
                                    Click="BoldButton_Click">
                    <AppBarToggleButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="B" />
                    </AppBarToggleButton.KeyboardAccelerators>
                </AppBarToggleButton>
                <AppBarToggleButton x:Name="ItalicButton"
                                    Icon="Italic"
                                    Click="ItalicButton_Click">
                    <AppBarToggleButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="I" />
                    </AppBarToggleButton.KeyboardAccelerators>
                </AppBarToggleButton>
                <AppBarToggleButton x:Name="UnderlineButton"
                                    Icon="Underline"
                                    Click="UnderlineButton_Click">
                    <AppBarToggleButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="U" />
                    </AppBarToggleButton.KeyboardAccelerators>
                </AppBarToggleButton>
                <AppBarSeparator />
                <AppBarToggleButton x:Name="AlignLeftButton"
                                    Icon="AlignLeft"
                                    Click="AlignLeftButton_Click"
                                    IsChecked="{x:Bind ViewModel.IsAlignmentLeft, Mode=OneWay}">
                    <AppBarToggleButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="L" />
                    </AppBarToggleButton.KeyboardAccelerators>
                </AppBarToggleButton>
                <AppBarToggleButton x:Name="AlignCenterButton"
                                    Icon="AlignCenter"
                                    Click="AlignCenterButton_Click"
                                    IsChecked="{x:Bind ViewModel.IsAlignmentCenter, Mode=OneWay}">
                    <AppBarToggleButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="E" />
                    </AppBarToggleButton.KeyboardAccelerators>
                </AppBarToggleButton>
                <AppBarToggleButton x:Name="AlignRightButton"
                                    Icon="AlignRight"
                                    Click="AlignRightButton_Click"
                                    IsChecked="{x:Bind ViewModel.IsAlignmentRight, Mode=OneWay}">
                    <AppBarToggleButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="R" />
                    </AppBarToggleButton.KeyboardAccelerators>
                </AppBarToggleButton>
            </CommandBar>

            <!-- Rich Edit Box -->
            <Grid Grid.Row="1" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <ScrollViewer>
                    <StackPanel>
                        <Grid Width="794"
                              Height="1123"
                              Background="White"
                              Margin="24">
                            <Grid.Shadow>
                                <ThemeShadow />
                            </Grid.Shadow>
                            
                            <RichEditBox x:Name="DocumentEditor"
                                         Background="Transparent" 
                                         Foreground="Black"
                                         FontFamily="Times New Roman"
                                         PreviewKeyDown="Editor_PreviewKeyDown"
                                         SelectionChanged="DocumentEditor_SelectionChanged"
                                         ScrollViewer.VerticalScrollBarVisibility="Visible"
                                         Padding="48,24,48,24">
                                <RichEditBox.Resources>
                                    <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="White" />
                                    <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="White" />
                                    <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="Black" />
                                    <SolidColorBrush x:Key="TextControlForegroundFocused" Color="Black" />
                                </RichEditBox.Resources>
                            </RichEditBox>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>
